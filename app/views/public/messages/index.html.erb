<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>メッセージ一覧</h2>
  </div>
<br>
<br>

  <table class="table table-bordered">
    <thead class="h5 table-secondary text-center">
      <tr>
        <th style="width: 20%">送信日時</th>
        <th style="width: 70%">メッセージ</th>
        <th style="width: 10%"> </th>
      </tr>
    </thead>
    <tbody>
    <% @messages.each do |message| %>
      <tr class="h5 text-center">
        <td class="align-middle text-center"><%= simple_format(message.created_at.to_s(:datetime_jp)) %></td>
        <td class="align-middle text-left">タイトル：<%= message.title %><br>本文：<%= message.content %></td>
        <td class="align-middle text-center">
          <% if current_user.id == message.user.id %>
            <%= link_to "削除", message_path(current_user), method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: 'btn btn-danger text-light' %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<br>
<br>
<br>
  <div class="row justify-content-center">
    <div class="col-sm-3 ">
    </div>
    <div class="col-sm-3">
      <%= link_to "　マイページへ戻る　", users_mypage_path, class: "btn btn-secondary text-light btn-lg"%>
    </div>
    <div class="col-sm-3 d-grid gap-2 mx-auto">
      <%= link_to "　お問い合わせ　", new_message_path, class: "btn btn-success text-light btn-lg"%>
    </div>

  </div>
<br>
<br>
<br>
</div>