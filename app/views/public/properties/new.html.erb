<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
  <h2>取り扱い物件新規登録</h2>
  </div>
<br>
<br>
<%= form_with model: @property, url: properties_confirm_path(@property), local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="kind">物件種別</label>
    </div>
    <div class="col-sm-4">
      <%= f.select :kind, Property.kinds.keys, {include_blank: '選択してください'},  {class: 'form-select'} %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="right">権利</label>
    </div>
    <div class="col-sm-4">
      <%= f.select :right, Property.rights.keys, {include_blank: '選択してください'},  {class: 'form-select'} %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="prefecture">都道府県</label>
    </div>
    <div class="col-sm-4">
      <%= f.select :prefecture, Property.prefectures.keys, {include_blank: '選択してください'},  {class: 'form-select'} %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="municipality">市区町村</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :municipality, autofocus: true, placeholder: "市区町村", autocomplete: "municipality", size: "20" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="city_block">丁目</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :city_block, autofocus: true, placeholder: "丁目", autocomplete: "city_block", size: "20" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="address">番地</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :address, autofocus: true, placeholder: "番地", autocomplete: "address", size: "30" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="line">路線</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :line,  placeholder: "路線", size: "20" %>線
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="station">駅名</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :station,  placeholder: "駅名", size: "20" %>駅
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="walking_minute">徒歩分(半角数字)</label>
    </div>
    <div class="col-sm-4">
      徒歩<%= f.text_field :walking_minute,  size: "2" %>分
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="land_area">土地面積(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :land_area,  size: "10" %>㎡
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="building_area">建物面積(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :building_area,  size: "10" %>㎡
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="price">価格(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :price,  size: "10" %>万円
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
        <label for="sell_category">売却カテゴリ</label>
    </div>
    <div class="col-sm-4">
      <%= f.select :sell_category, Property.sell_categories.keys, {include_blank: '選択してください'},  {class: 'form-select'} %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="age">築年月(西暦)</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :age,  placeholder: "〇年〇月", size: "10" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="structure">構造</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :structure,  placeholder: "〇造〇階建", size: "30" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="location_floor">所在階(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :location_floor,  size: "2" %>階
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="building_coverage_ratio">建ぺい率(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :building_coverage_ratio, size: "5" %>％
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="floor_area_ratio">容積率(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :floor_area_ratio, size: "10" %>％
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="city_planning">都市計画</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :city_planning,  placeholder: "〇区域", size: "20" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="use_area">用途地域</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :use_area,  placeholder: "〇地域", size: "40" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="legal_restriction">法令制限</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :legal_restriction,  size: "60" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="road_contact">接道</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :road_contact,  placeholder: "〇側〇ｍ公道", size: "60" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="condition">現況</label>
    </div>
    <div class="col-sm-4">
      <%= f.select :condition, Property.conditions.keys, {},  {class: 'form-select'} %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
    <%= f.label :release_status, "公開ステータス", {class: "form-label"} %>
    </div>
    <div class="col-sm-4 btn-group" data-toggle="buttons">
      <label class="btn btn-outline-primary" style="width:50%">
        <%= f.radio_button :release_status, 1, {checked: true} %>公開
      </label>
      <label class="btn btn-outline-danger" style="width:50%">
        <%= f.radio_button :release_status, 0, {} %>非公開
      </label>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="comment">コメント</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_area :comment,  size: "60x5" %>
    </div>
  </div>
<br>
  <div class="form-group row h5">
    <div class="actions col-5 mx-auto">
      <%= button_tag type: "submit", class: "btn btn-success btn-lg btn-block" do %>
      <i class="fa-solid fa-building-circle-check fa-lg"></i>　登録確認画面へ進む
      <% end %>
    </div>
  </div>
<% end %>
</div>
<br>
<br>