<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>物件詳細</h2>
  </div>
<br>
<br>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="kind">物件種別</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.kind %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="kind">権利</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.right %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="building_name">建物名称</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.building_name %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="prefecture">都道府県</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.prefecture %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="municipality">市区町村</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.municipality %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="city_block">丁目</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.city_block %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="address">番地－号</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.address %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="line">路線</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.line %>線
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="station">最寄駅名</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.station %>駅
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="walking_minute">徒歩分(半角数字)</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      徒歩<%= @property.walking_minute %>分
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="land_area">土地面積(半角数字)</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.land_area %>㎡
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="land_of_co_ownership">土地持分割合</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.land_of_co_ownership %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="building_area">建物面積(半角数字)</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.building_area %>㎡
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="floor_plan">間取り</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.floor_plan %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="price">価格(半角数字)</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.price %>万円
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
        <label for="sell_category">売却カテゴリ</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.sell_category %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="age">築年月(西暦)</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.age %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="structure">構造</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.structure %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="location_floor">所在階(半角数字)</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.location_floor %>階
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="building_coverage_ratio">建ぺい率(半角数字)</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.building_coverage_ratio %>％
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="floor_area_ratio">容積率(半角数字)</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.floor_area_ratio %>％
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="city_planning">都市計画</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.city_planning %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="use_area">用途地域</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.use_area %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="legal_restriction">法令制限</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.legal_restriction %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="road_contact">接道</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.road_contact %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="condition">現況</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.condition %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="release_status">公開ステータス</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <% if @property.release_status %>
        <b class="text-success">公開</b>
      <% else %>
        <b class="text-danger">非公開</b>
      <% end %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="comment">コメント</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.comment %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="property_image">物件画像</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <% if @property.image.attached? %>
        <%= image_tag @property.image, size: "320x260" %>
      <% else %>
        <%= image_tag 'default-image.jpg', size: "200x200" %>
      <% end %>
    </div>
  </div>
<br>
<br>
<br>
<% if current_user.id == @property.user_id %>
  <div class="row justify-content-center">
    <div class="col-sm-4 ml-auto">
      <%= link_to properties_myproperties_path, class: "btn btn-secondary text-light btn-lg" do %>
      <i class="fa-solid fa-backward-step fa-lg"></i>　取扱物件一覧へ戻る
      <% end %>
    </div>
    <div class="col-sm-4">
      <%= link_to edit_property_path(@property), class: "btn btn-primary btn-lg" do %>
      <i class="fa-solid fa-file-pen fa-lg"></i>　編集する
      <% end %>
    </div>
  </div>
<% else %>
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>元付業者情報</h2>
  </div>
<br>
<br>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="company_name">会社名</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.user.company_name %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="location">所在地</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.user.location %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="licensing_entity">免許主体</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.user.licensing_entity %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="licensing_region">免許地</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.user.licensing_region %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="update_number">免許更新数</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      (<%= @property.user.update_number %>)
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="license_number">免許番号</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      第<%= @property.user.license_number %>号
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="representatives_name">代表者名</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.user.representatives_name %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="manager_name">担当者名</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.user.manager_name %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="telephone_number">電話番号(ハイフンなし)</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.user.telephone_number %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="email">メールアドレス</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.user.email %>
    </div>
  </div>
<br>
<br>
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <%= link_to view_applications_path, class: "btn btn-secondary text-light btn-lg" do %>
      <i class="fa-solid fa-backward-step fa-lg"></i>　閲覧申請一覧へ戻る
      <% end %>
    </div>
    <div class="col-sm-4">
      <%= link_to users_information_path(@property.user_id), class: "btn btn-primary btn-lg" do %>
      <i class="fa-solid fa-user fa-lg"></i>　元付業者情報
      <% end %>
    </div>
  </div>
<% end %>
<br>
<br>
<br>
</div>