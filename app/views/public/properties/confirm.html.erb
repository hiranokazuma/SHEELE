<div class="container">
<br>
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>物件登録内容確認</h2>
  </div>
<br>
<br>

  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="kind">物件種別</label>
    </div>
    <div class="col-sm-4">
      <%= @property.kind %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="kind">権利</label>
    </div>
    <div class="col-sm-4">
      <%= @property.right %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="prefecture">都道府県</label>
    </div>
    <div class="col-sm-4">
      <%= @property.prefecture %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="municipality">市区町村</label>
    </div>
    <div class="col-sm-4">
      <%= @property.municipality %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="city_block">丁目</label>
    </div>
    <div class="col-sm-4">
      <%= @property.city_block %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="address">番地</label>
    </div>
    <div class="col-sm-4">
      <%= @property.address %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="line">路線</label>
    </div>
    <div class="col-sm-4">
      <%= @property.line %>線
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="station">駅名</label>
    </div>
    <div class="col-sm-4">
      <%= @property.station %>駅
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="walking_minute">徒歩分(半角数字)</label>
    </div>
    <div class="col-sm-4">
      徒歩<%= @property.walking_minute %>分
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="land_area">土地面積(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.land_area %>㎡
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="building_area">建物面積(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.building_area %>㎡
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="price">価格(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.price %>万円
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
        <label for="sell_category">売却カテゴリ</label>
    </div>
    <div class="col-sm-4">
      <%= @property.sell_category %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="age">築年月(西暦)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.age %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="structure">構造</label>
    </div>
    <div class="col-sm-4">
      <%= @property.structure %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="location_floor">所在階(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.location_floor %>階
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="building_coverage_ratio">建ぺい率(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.building_coverage_ratio %>％
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="floor_area_ratio">容積率(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.floor_area_ratio %>％
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="city_planning">都市計画</label>
    </div>
    <div class="col-sm-4">
      <%= @property.city_planning %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="use_area">用途地域</label>
    </div>
    <div class="col-sm-4">
      <%= @property.use_area %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="legal_restriction">法令制限</label>
    </div>
    <div class="col-sm-4">
      <%= @property.legal_restriction %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="road_contact">接道</label>
    </div>
    <div class="col-sm-4">
      <%= @property.road_contact %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="condition">現況</label>
    </div>
    <div class="col-sm-4">
      <%= @property.condition %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="release_status">公開ステータス</label>
    </div>
    <div class="col-sm-4">
      <% if @property.release_status %>
        <b class="text-success">公開</b>
      <% else %>
        <b class="text-danger">非公開</b>
      <% end %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="comment">コメント</label>
    </div>
    <div class="col-sm-4">
      <%= @property.comment %>
    </div>
  </div>
  <!--<div class="form-group row h5">-->
  <!--  <div class="col-sm-3">-->
  <!--    <label for="property_image">物件画像</label>-->
  <!--  </div>-->
  <!--  <div class="col-sm-4">-->
      <!--<#% if @property.image.attached? %>-->
      <!--  <#%= image_tag @property.image, size: "320x260" %>-->
      <!--<#% else %>-->
      <!--  <#%= image_tag 'default-image', size: "200x200" %>-->
      <!--<#% end %>-->
  <!--  </div>-->
  <!--</div>-->
<br>
  <%= form_with model: @property, url: properties_path(@property), local: true do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :kind %>
    <%= f.hidden_field :right %>
    <%= f.hidden_field :prefecture %>
    <%= f.hidden_field :municipality %>
    <%= f.hidden_field :city_block %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :line %>
    <%= f.hidden_field :station %>
    <%= f.hidden_field :walking_minute %>
    <%= f.hidden_field :land_area %>
    <%= f.hidden_field :building_area %>
    <%= f.hidden_field :price %>
    <%= f.hidden_field :sell_category %>
    <%= f.hidden_field :age %>
    <%= f.hidden_field :structure %>
    <%= f.hidden_field :location_floor %>
    <%= f.hidden_field :building_coverage_ratio %>
    <%= f.hidden_field :floor_area_ratio %>
    <%= f.hidden_field :city_planning %>
    <%= f.hidden_field :use_area %>
    <%= f.hidden_field :legal_restriction %>
    <%= f.hidden_field :road_contact %>
    <%= f.hidden_field :condition %>
    <%= f.hidden_field :release_status %>
    <%= f.hidden_field :comment %>
    <!--<#%= f.hidden_field :image %>-->
  <div class="form-group row h5">
    <div class="actions col-3 mx-auto">
      <%= button_tag type: "submit", name: :back, class: "btn btn-secondary btn-lg btn-block" do %>
      <i class="fa-solid fa-backward-step fa-lg"></i>　戻る
      <% end %>
    </div>
    <div class="actions col-3 mx-auto">
      <%= button_tag type: "submit", class: "btn btn-success btn-lg btn-block"%>
      <i class="fa-solid fa-file-arrow-up fa-lg"></i>　登録を完了する
    </div>
  </div>
  <% end %>
</div>