<div class="container">
<br>
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>新規会員登録</h2>
  </div>
<br>
<br>
<%= form_with model: @user, url: users_sign_up_confirm_path(@user), local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="company_name">会社名</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :company_name, autofocus: true, placeholder: "会社名", autocomplete: "name", size: "30" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="location">所在地</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :location, autofocus: true, placeholder: "所在地", autocomplete: "address", size: "40" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="licensing_entity">免許主体</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :licensing_entity, autofocus: true, placeholder: "知事or国土交通大臣",  size: "20" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="licensing_region">免許地</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :licensing_region, autofocus: true, placeholder: "東京都",  size: "20" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="update_number">免許更新数</label>
    </div>
    <div class="col-sm-4">
      (<%= f.text_field :update_number, autofocus: true, placeholder: "１",  size: "1" %>)
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="license_number">免許番号</label>
    </div>
    <div class="col-sm-4">
      第<%= f.text_field :license_number, autofocus: true, placeholder: "１２３４５",  size: "10" %>号
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="representatives_name">代表者名</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :representatives_name, autofocus: true, placeholder: "仕入太郎",  size: "20" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="manager_name">担当者名</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :manager_name, autofocus: true, placeholder: "仕入次郎",  size: "20" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="telephone_number">電話番号(ハイフンなし)</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :telephone_number, autofocus: true, placeholder: "0123456789", autocomplete: "telephone_number",  size: "20" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="email">メールアドレス</label>
    </div>
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, placeholder: "example@example", autocomplete: "email",  size: "40" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="password">パスワード</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    </div>
    <div class="col-sm-4">
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="password">パスワード(確認用)</label>
    </div>
    <div class="col-sm-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
<br>
<br>
  <div class="form-group row h5">
    <div class="actions col-5 mx-auto">
      <%= button_tag type: "submit", "登録確認画面へ進む", class: "btn btn-success btn-lg btn-block" do %>
      <i class="fa-solid fa-user-check fa-lg"></i></i>　登録確認画面へ進む
      <% end %>
    </div>
  </div>
<% end %>
<br>
<br>
<h2>既に登録済みの方</h2>
<br>
  <div class="form-group row h4 font-weight-bold">

    <div class="col-sm-5 mx-auto">
      <%= link_to new_user_session_path, class: "btn btn-primary btn-lg btn-block" do %>
      <i class="fa-solid fa-right-to-bracket fa-lg"></i>　会員ログイン
      <% end %>
    </div>
  </div>
</div>
<br>
