<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>閲覧申請編集</h2>
  </div>
<br>
<br>
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>申請を受けた物件詳細</h2>
  </div>
<br>
<br>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="kind">物件種別</label>
    </div>
    <div class="col-sm-4">
      <%= @property.kind %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="kind">権利</label>
    </div>
    <div class="col-sm-4">
      <%= @property.right %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="building_name">建物名称</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.building_name %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="prefecture">都道府県</label>
    </div>
    <div class="col-sm-4">
      <%= @property.prefecture %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="municipality">市区町村</label>
    </div>
    <div class="col-sm-4">
      <%= @property.municipality %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="city_block">丁目</label>
    </div>
    <div class="col-sm-4">
      <%= @property.city_block %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="address">番地－号</label>
    </div>
    <div class="col-sm-4">
      <%= @property.address %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="line">路線</label>
    </div>
    <div class="col-sm-4">
      <%= @property.line %>線
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="station">最寄駅名</label>
    </div>
    <div class="col-sm-4">
      <%= @property.station %>駅
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="walking_minute">徒歩分(半角数字)</label>
    </div>
    <div class="col-sm-4">
      徒歩<%= @property.walking_minute %>分
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="land_area">土地面積(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.land_area %>㎡
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="land_of_co_ownership">土地持分割合</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.land_of_co_ownership %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="building_area">建物面積(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.building_area %>㎡
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="floor_plan">間取り</label>
    </div>
    <div class="col-sm-4 d-flex align-items-center">
      <%= @property.floor_plan %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="price">価格(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.price %>万円
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
        <label for="sell_category">売却カテゴリ</label>
    </div>
    <div class="col-sm-4">
      <%= @property.sell_category %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="age">築年月(西暦)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.age %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="structure">構造</label>
    </div>
    <div class="col-sm-4">
      <%= @property.structure %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="location_floor">所在階(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.location_floor %>階
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="building_coverage_ratio">建ぺい率(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.building_coverage_ratio %>％
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="floor_area_ratio">容積率(半角数字)</label>
    </div>
    <div class="col-sm-4">
      <%= @property.floor_area_ratio %>％
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="city_planning">都市計画</label>
    </div>
    <div class="col-sm-4">
      <%= @property.city_planning %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="use_area">用途地域</label>
    </div>
    <div class="col-sm-4">
      <%= @property.use_area %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="legal_restriction">法令制限</label>
    </div>
    <div class="col-sm-4">
      <%= @property.legal_restriction %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="road_contact">接道</label>
    </div>
    <div class="col-sm-4">
      <%= @property.road_contact %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="condition">現況</label>
    </div>
    <div class="col-sm-4">
      <%= @property.condition %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="release_status">公開ステータス</label>
    </div>
    <div class="col-sm-4">
      <% if @property.release_status %>
        <b class="text-success">公開</b>
      <% else %>
        <b class="text-danger">非公開</b>
      <% end %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="comment">コメント</label>
    </div>
    <div class="col-sm-4">
      <%= @property.comment %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="property_image">物件画像</label>
    </div>
    <div class="col-sm-4">
      <% if @property.image.attached? %>
        <%= image_tag @property.image, size: "320x260" %>
      <% else %>
        <%= image_tag 'default-image', size: "200x200" %>
      <% end %>
    </div>
  </div>
<br>
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>申請をした会員一覧</h2>
  </div>
<br>
<br>
  <table class="table table-bordered">
    <thead class="h5 table-secondary text-center">
      <tr>
        <th style="width: 7%">申請ID</th>
        <th style="width: 7%">会員ID</th>
        <th style="width: 55%" class="h5 align-middle font-weight-bold">会員情報</th>
        <th style="width: 19%" class="h5 align-middle font-weight-bold">申請</th>
        <th style="width: 12%" class="h5 align-middle font-weight-bold">操作</th>
      </tr>
    </thead>
    <tbody>

      <% @view_applications.each do |view_application| %>
        <tr class="h5 text-center">
          <td class="align-middle text-center"><%= view_application.id %></td>
          <td class="align-middle text-center"><%= view_application.user.id %></td>
          <td class="align-middle text-center">
              <%= view_application.user.company_name %>
              <%= view_application.user.licensing_region %>
              <%= view_application.user.licensing_entity %>
              (<%= view_application.user.update_number %>)
              第<%= view_application.user.license_number %>号
              <%= view_application.user.location %><br>
              代表者名：<%= view_application.user.representatives_name %><br>
              担当者名：<%= view_application.user.manager_name %><br>
              電話番号：<%= view_application.user.telephone_number %><br>
              メールアドレス：<%= view_application.user.email %>
          </td>
          <td class="align-middle text-center">
            <%= form_with model: @view_application, url: view_application_path(@view_application), local: true do |f| %>
            <% if @view_application.apply_status == "申請中" %>
              <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-outline-primary">
                  <h5><%= f.radio_button :apply_status, 2, checked: true %>許可</h5>
                </label>
                <label class="btn btn-outline-danger">
                  <h5><%= f.radio_button :apply_status, 3, {} %>否認</h5>
                </label>
              </div>
            <% elsif @view_application.apply_status == "許可" %>
              <b class="text-warning">許可済</b>
            <% elsif @view_application.apply_status == "否認" %>
              <b class="text-danger">否認</b>
            <% end %>
          </td>
          <td class="align-middle text-center">
            <% if @view_application.apply_status == "申請中" %>
              <%= f.submit "登録する",  data: { confirm: "登録してもよろしいですか？" }, class: "btn btn-warning text-light btn-block"  %>
            <% else %>
            <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
<br>
    <div class="row justify-content-center">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-3">
        <%= link_to properties_myproperties_path, class: "btn btn-secondary text-light btn-lg" do %>
        <i class="fa-solid fa-backward-step fa-lg"></i>　取扱物件一覧へ戻る
        <% end %>
      </div>
    </div>
<br>
<br>
<br>
<br>
</div>