<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>運営からのお知らせ<br>内容編集</h2>
  </div>
<br>
<br>
  <% if @management_notice.errors.any? %>
    <div id="error_explanation">
      <h3><%= @management_notice.errors.count %>件のエラーがあります:</h3>
      <ul>
        <% @management_notice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with model: @management_notice, url: admin_management_notice_path, local: true do |f| %>
<!--<#%= form_for message, :url => {:action => :create} do |f| %>-->
  <%#= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-2">
      <label for="title">タイトル</label>
    </div>
    <div class="col-sm-4">
    <%= f.text_field :title, size: "50" %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-2">
      <label for="content">本文</label>
    </div>
    <div class="col-sm-4">
    <%= f.text_area :content, size: "60x15" %>
    </div>
  </div>
<br>
<br>
  <div class="row justify-content-center">
    <div class="col-sm-4 d-grid gap-2">
      <%= link_to admin_messages_path, class: "btn btn-secondary text-light btn-lg" do %>
      <i class="fa-solid fa-backward-step fa-lg"></i>　メッセージ一覧へ戻る
      <% end %>
    </div>
    <div class="col-sm-3 d-grid gap-2">
    <%= f.hidden_field :admin_id %>
      <%= button_tag type: "submit", class: "btn btn-success btn-lg" do %>
      <i class="fa-solid fa-file-arrow-up fa-lg"></i>　編集する
      <% end %>
    </div>
  </div>
<% end %>
<br>
<br>
<br>
</div>