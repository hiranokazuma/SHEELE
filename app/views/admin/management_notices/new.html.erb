<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>運営からのお知らせ<br>新規作成</h2>
  </div>
<br>
<br>
  <% if @management_notice.errors.any? %>
    <div id="error_explanation">
      <h3><%= @management_notice.errors.count %>件のエラーがあります:</h3>
      <ul>
        <% @management_notice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with model: @management_notice, url: admin_management_notices_confirm_path, local: true do |f| %>
<!--<#%= form_for message, :url => {:action => :create} do |f| %>-->
  <%#= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-2">
      <label for="title">タイトル</label>
    </div>
    <div class="col-sm-4">
    <%= f.text_field :title, size: "50" %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-2">
      <label for="content">本文</label>
    </div>
    <div class="col-sm-4">
    <%= f.text_area :content, size: "60x15" %>
    </div>
  </div>
<br>
<br>
  <div class="row justify-content-center">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-3 d-grid gap-2 mr-auto">
      <%= link_to "メッセージ一覧へ戻る", admin_messages_path, class: "btn btn-secondary text-light btn-lg"%>
    </div>
    <div class="col-sm-3 d-grid gap-2 ml-auto">
    <%= f.hidden_field :admin_id %>
      <%= f.submit '　送信する　', class: "btn btn-success btn-lg" %>
    </div>
    <div class="col-sm-3 d-grid gap-2">
      <%= link_to "管理トップへ戻る", admin_homes_top_path, class: "btn btn-secondary text-light btn-lg"%>
    </div>
  </div>
<% end %>
<br>
<br>
<br>
</div>