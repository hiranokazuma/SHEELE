<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>運営からのお知らせ<br>新規作成</h2>
  </div>
<br>
<br>
<%= form_with model: @management_notice, url: admin_management_notices_confirm_path, local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-2">
      <label for="title">タイトル</label>
    </div>
    <div class="col-sm-4">
    <%= f.text_field :title, size: "50" %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-2">
      <label for="content">本文</label>
    </div>
    <div class="col-sm-4">
    <%= f.text_area :content, size: "60x15" %>
    </div>
  </div>
<br>
<br>
  <div class="row justify-content-center">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-3 d-grid gap-2 mr-auto">
      <%= link_to admin_messages_path, class: "btn btn-secondary text-light btn-lg" do %>
      <i class="fa-solid fa-backward-step fa-lg"></i>メッセージ一覧へ戻る
      <% end %>
    </div>
    <div class="col-sm-3 d-grid gap-2 ml-auto">
    <!--<#%= f.hidden_field :admin_id %>-->
    <!--<#%= f.hidden_field :user_id, :value => @users %>-->
      <%= button_tag type: "submit", class: "btn btn-success btn-lg" do %>
      <i class="fa-solid fa-reply fa-lg"></i>　送信する
      <% end %>
    </div>
  </div>
<% end %>
<br>
<br>
<br>
</div>