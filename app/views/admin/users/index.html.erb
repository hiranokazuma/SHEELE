<div class="container">
<br>
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>登録会員一覧</h2>
  </div>
<br>
<br>
    <h3 class="text-center">会員検索</h3>
<br>
<%= search_form_for @q, url: admin_users_path do |f| %>
  <div class="form-group row h5">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-3">
      <%= f.label :id, "会員ID" %>
    </div>
    <div class="col-sm-4">
      <%= f.search_field :id_eq %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-3">
      <%= f.label :company_name, "会社名" %>
    </div>
    <div class="col-sm-4">
      <%= f.search_field :company_name_cont %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-3">
      <%= f.label :location, "所在地" %>
    </div>
    <div class="col-sm-4">
      <%= f.search_field :location_cont %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-3">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    </div>
    <div class="col-sm-4">
      <%= f.search_field :telephone_number_eq %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-3">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-sm-4">
      <%= f.search_field :email_cont %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-2">
      <%= f.submit "検索する", class: "btn btn-success text-light btn-lg btn-block" %>
    </div>
  </div>
<% end %>
<br>
<br>
  <table class="table table-bordered">
    <thead class="h5 table-secondary text-center">
      <tr>
        <th style="width: 8%">会員ID</th>
        <th style="width: 12%">ステータス</th>
        <th style="width: 66%">概要</th>
        <th style="width: 24%"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr class="h5 text-center">
        <td class="align-middle text-center"><%= user.id %></td>
        <td class="align-middle text-center">
            <% if user.is_deleted %>退会
            <% else %><b class="text-success">有効</b>
            <% end %>
        </td>
        <td class="align-middle text-center"><%= user.company_name %>
            <%= user.licensing_region %>
            <%= user.licensing_entity %>
            (<%= user.update_number %>)
            第<%= user.license_number %>号
            <%= user.location %><br>
            電話番号<%= user.telephone_number %>
            メールアドレス<%= user.email %>
        </td>
        <td class="align-middle text-center">
          <%= link_to "詳細を見る", admin_user_path(user), class: "btn btn-primary text-light btn-block"  %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<%= paginate @users %>

<br>
<br>
</div>