<div class="container">
<br>
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>登録会員詳細</h2>
  </div>
<br>
<br>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="company_name">会社名</label>
    </div>
    <div class="col-sm-4">
      <%= @user.company_name %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="location">所在地</label>
    </div>
    <div class="col-sm-4">
      <%= @user.location %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="licensing_entity">免許主体</label>
    </div>
    <div class="col-sm-4">
      <%= @user.licensing_entity %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="licensing_region">免許地</label>
    </div>
    <div class="col-sm-4">
      <%= @user.licensing_region %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="update_number">免許更新数</label>
    </div>
    <div class="col-sm-4">
      (<%= @user.update_number %>)
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="license_number">免許番号</label>
    </div>
    <div class="col-sm-4">
      第<%= @user.license_number %>号
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="representatives_name">代表者名</label>
    </div>
    <div class="col-sm-4">
      <%= @user.representatives_name %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="manager_name">担当者名</label>
    </div>
    <div class="col-sm-4">
      <%= @user.manager_name %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="telephone_number">電話番号(ハイフンなし)</label>
    </div>
    <div class="col-sm-4">
      <%= @user.telephone_number %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="email">メールアドレス</label>
    </div>
    <div class="col-sm-4">
      <%= @user.email %>
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="password">パスワード</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    </div>
    <div class="col-sm-4">
      <%= @user.password %>
    <!--<%#= f.password_field :password, value: @user.password, readonly: true %>-->
    </div>
  </div>
  <div class="form-group row h5">
    <div class="col-sm-3">
      <label for="release_status">会員ステータス</label>
    </div>
    <div class="col-sm-4">
      <% if @user.is_deleted %>
        <b class="text-secondary">退会</b>
      <% else %>
        <b class="text-success">有効</b>
      <% end %>
    </div>
  </div>
<br>
<br>
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-3">
      <%= link_to "　一覧へ戻る　", admin_users_path, class: "btn btn-success text-light btn-lg"%>
    </div>
    <div class="col-sm-3">
      <%= link_to "　編集する　", edit_admin_user_path(@user), class: "btn btn-primary btn-lg"%>
    </div>
  </div>
<br>
<br>
<br>
</div>