<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>お問い合わせ一覧</h2>
  </div>
<br>
<br>
 <table class="table table-bordered">
    <thead class="h5 table-secondary text-center">
      <tr>
        <th style="width: 20%">送信日時</th>
        <th style="width: 10%">問合ID</th>
        <th style="width: 20%">送信者</th>
        <th style="width: 40%">メッセージ</th>
        <th style="width: 10%"> </th>
      </tr>
    </thead>
    <tbody>
    <% @messages.each do |message| %>
      <tr class="h5 text-center">
        <td class="align-middle text-center"><%= simple_format(message.created_at.to_s(:datetime_jp)) %></td>
        <td class="align-middle text-center"><%= message.id %></td>
        <td class="align-middle text-center"><%= message.user.company_name %></td>
        <td class="align-middle text-left">
          <%= link_to admin_message_path(message) do %>
            タイトル：<%= message.title %><br>本文：<%= message.content.truncate(15) %>
          <% end %>
        </td>
        <td class="align-middle text-center">
            <%= link_to "削除", admin_message_path(message), method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: 'btn btn-danger text-light' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<br>
<br>
<br>
  <div class="row">
    <div class="col-sm-3 ">
    </div>
    <div class="col-sm-3 d-grid gap-2 mx-auto">
      <%= link_to "　新規作成　", new_admin_message_path, class: "btn btn-success text-light btn-lg"%>
    </div>

    <div class="col-sm-3 d-grid gap-2 mx-auto">
      <%= link_to "管理トップへ戻る", admin_homes_top_path, class: "btn btn-secondary text-light btn-lg"%>
    </div>
  </div>

<br>
<br>
<br>
</div>
