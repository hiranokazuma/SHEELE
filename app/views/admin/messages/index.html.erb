<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>メッセージ一覧</h2>
  </div>
<br>
<br>
<% @messages.each do |message| %>
  <div>
    <div class="media-left">
      <img class="media-object img-circle" src="<%= gravatar_url( message.user, { size: 50 }) %>" alt="">
    </div>
    <div class="media-body">
      <div>
        <%= link_to message.user.company_name, user_path(message.user) %> <span class="text-muted">posted at <%= message.created_at %></span>
      </div>
      <div>
        <%= message.kind %>
      <br>
        <%= message.title %>
      <br>
        <%= message.content %>
      <br>
        <% if current_user == message.user %>
          <%= link_to "削除", user_message_path(current_user, message), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
        <% end %>
      </div>
    </div>
  <hr>
  </div>
<% end %>

<br>
<br>
  <div class="row">
    <div class="col-sm-3 ">
    </div>
    <div class="col-sm-3 d-grid gap-2 mx-auto">
      <%= link_to "　新規作成　", new_admin_message_path, class: "btn btn-success text-light btn-lg"%>
    </div>

    <div class="col-sm-3 d-grid gap-2 mx-auto">
      <%= link_to "管理トップへ戻る", admin_homes_top_path, class: "btn btn-secondary text-light btn-lg"%>
    </div>
  </div>

<br>
<br>
<br>
</div>
