<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>お問い合わせ<br>メッセージ詳細</h2>
  </div>
<br>
<br>
<br>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label class="created_at">送信日時</label>
    </div>
    <div class="col-sm-4">
      <%= @message.created_at.to_s(:datetime_jp) %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="sender">送信者</label>
    </div>
    <div class="col-sm-4">
      <%= @message.user.company_name %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="title">タイトル</label>
    </div>
    <div class="col-sm-4">
      <%= @message.title %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-3">
      <label for="content">本文</label>
    </div>
    <div class="col-sm-4">
      <%= @message.content %>
    </div>
  </div>
<br>
<br>
<br>
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-3 d-grid gap-2 mx-auto">
      <%= link_to "　返信する　", new_admin_message_path, class: "btn btn-success text-light btn-lg"%>
    </div>

    <div class="col-sm-3 d-grid gap-2 mx-auto">
      <%= link_to "お知らせ一覧へ戻る", admin_messages_path, class: "btn btn-secondary text-light btn-lg"%>
    </div>
  </div>

<br>
<br>
<br>
</div>
