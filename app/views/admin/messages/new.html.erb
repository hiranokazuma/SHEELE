<div class="container">
  <div class="d-grid gap-2 col-5 mx-auto text-center">
    <h2>メッセージ新規作成</h2>
  </div>
<br>
<br>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h3><%= @message.errors.count %>件のエラーがあります:</h3>
      <ul>
        <% @message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with model: @message, url: admin_messages_path, local: true do |f| %>
<!--<#%= form_for message, :url => {:action => :create} do |f| %>-->
  <%= f.hidden_field :user_id, :value => @id %>
  <%= f.hidden_field :admin_id, :value => @id %>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-2">
      <label for="kind">種類</label>
    </div>
    <div class="col-sm-4">
    <%= f.select :kind, [['全体へのお知らせ', 0], ['管理者メッセージ', 1]],  {class: 'form-select'} %>
    </div>
  </div>
    <!--<%#= render 'select_users', {user: @user} %>-->



  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-2">
      <label for="title">タイトル</label>
    </div>
    <div class="col-sm-4">
    <%= f.text_field :title, size: "50" %>
    </div>
  </div>
  <div class="form-group row h5 justify-content-center">
    <div class="col-sm-2">
      <label for="content">本文</label>
    </div>
    <div class="col-sm-4">
    <%= f.text_area :content, size: "60x15" %>
    </div>
  </div>
<br>
  <div class="row justify-content-center">
    <div class="col-sm-3 ">
    </div>
    <div class="col-sm-3 d-grid gap-2 mx-auto">
      <%= link_to admin_homes_top_path, class: "btn btn-secondary text-light btn-lg" do %>
      <i class="fa-solid fa-backward-step fa-lg"></i>　管理トップへ戻る
      <% end %>
    </div>
    <div class="col-sm-3 d-grid gap-2 mx-auto">
      <%= button_tag type: "submit", class: "btn btn-success btn-lg" do%>
      <i class="fa-solid fa-paper-plane fa-lg"></i>　編集する
      <% end %>
    </div>
    <div class="col-sm-3 d-grid gap-2 mx-auto">
      <%= link_to "管理トップへ戻る", admin_homes_top_path, class: "btn btn-secondary text-light btn-lg"%>
    </div>
  </div>
<% end %>
<br>
<br>
<br>
</div>